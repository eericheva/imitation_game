{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version": "0.0.1",
    "title": "ImitationGame",
    "type": "object",
    "definitions": {
        "Game": {
            "type": "object",
            "properties": {
                "playerA": {
                    "$ref": "#/definitions/Player"
                },
                "playerB": {
                    "$ref": "#/definitions/Player"
                },
                "playerC": {
                    "$ref": "#/definitions/Player"
                },
                "game_chat_id": {
                    "type": "integer",
                    "default": null
                },
                "last_call": {
                    "type": "object",
                    "default": null
                }
            }
        },
        "Player": {
            "type": "object",
            "properties": {
                "userid": {
                    "type": "integer",
                    "default": null
                },
                "username": {
                    "type": "string",
                    "default": "null"
                },
                "last_message": {
                    "type": "string",
                    "default": "null"
                },
                "user_history": {
                    "type": "array",
                    "min_items": 1,
                    "max_items": 3,
                    "items": {
                        "type": "string"
                    }
                },
                "model": {
                    "type": "object",
                    "default": null
                }
            }
        },
        "Prefixes": {
            "type": "string",
            "enum": [
                "PlayerA",
                "PlayerB",
                "PlayerC"
            ]
        },
        "MessageWrapper": {
            "type": "string",
            "enum": [
                "says"
            ]
        },
        "VoiceItItems": {
            "type": "string",
            "enum": [
                "voice_c_yes",
                "voice_b_yes"
            ]
        },
        "GameStartItems": {
            "type": "string",
            "enum": [
                "start_game",
                "stop_game"
            ]
        },
        "BaseCommand": {
            "type": "string",
            "enum": [
                "start",
                "help"
            ]
        }
    },
    "properties": {
        "player": {
            "$ref": "#/definitions/Player"
        },
        "game": {
            "$ref": "#/definitions/Game"
        }
    },
    "additionalProperties": false
}
